    <script>

        window.onload = function () {
            listarAnime();
            items();
        };


        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function Logeo() {
            var password = $('#Pass').val();
            var correo = $('#Email').val();
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("buscarUsuario", "LoginAdmin")',
                contentType: "application/json; charset=utf-8",
                data: { correo: correo, password: password },
                success: function (response) {
                    location.href = '@Url.Action("Principal","Producto")'
                },
                error: function (response) {
                    alertify.set('notifier', 'position', 'top-center');
                    alertify.error('La cuenta ingresada no se encuentra registrada!!');
                    $('#Pass').val("");
                    $('#Email').val("");
                }
            });

        }

     

    </script>

