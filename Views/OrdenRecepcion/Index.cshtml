    <script>

        window.onload = function () {
            ObtenerOrdenCompra();
        };


        function ObtenerOrdenCompra() {
            var cod = $('#codOrden').val();
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("obtenerOrdenCompra", "Orden_Compra_Proveedor")',
                contentType: "application/json; charset=utf-8",
                data: { parametro: cod },
                success: function (response) {
                    $('#desProd').val(response.codOrden);
                    $('#estado').val(response.estOrden);

                },
                error: function (response) {
                    alert(response);
                }
            });
        }

        function RecepcionarOrden() {

            var cod = $('#desProd').val();

            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("RecepcionarOrden", "OrdenRecepcion")',
                contentType: "application/json; charset=utf-8",
                data: {parametro : cod},
                success: function (response) {
                    alertify.set('notifier', 'position', 'top-center');
                    alertify.success('Orden de Compra generada');
                },
                 error: function (response) {
                     alert(response);
                }
             });

        }





