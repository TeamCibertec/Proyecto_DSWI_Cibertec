        <script>

            window.onload = function ()
            {
                listarAnime();
                Session();
                items();
            };


            function Cantidad(x) {
                var cant_actual = +$('#cant').val() + x;
                if (cant_actual > 0) {
                    $('#cant').val(cant_actual)
                }
            }

            function Session() {
            var username = '@Session["login"]';
            var asignaciones = '@Session["asignaciones"]';
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
            $('#btnIncio').html(json["nomCliEmp"]);

                if (asignaciones != '') {
                    $('#admin').css('display', 'block');
                    $('#link-mc').css('display', 'none');
                    $('#link-in').css('display', 'none');
                    $('#link-re').css('display', 'none');
                    $('#link-cs').css('display', 'block');
                    $('#nos_').css('display', 'none');
                    return;
                }
                if (json["nomCliEmp"] != '') {
                    $('#link-mc').css('display', 'block');
                    $('#link-cs').css('display', 'block');
                    $('#link-in').css('display', 'none');
                    $('#link-re').css('display', 'none');
                }
            }


            function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }


            function AñadiralCarrito(x) {
                var username = '@Session["login"]';
                if (username === '') {
                    alertify.set('notifier', 'position', 'top-center');
                    alertify.error('Usted no se encuentra registrado!!');
                } else {
                    var can = $('#cant').val();
                var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
                var pre = @Model.preProducto;
                var cod = x;
                var des = '@Model.desProducto';
                var img = '@Model.imgProd';

                var prod =
                {
                    idUsuario: json["idUsu"],
                    idProducto: cod,
                    preProd: pre,
                    cantProd: can,
                    desProd: des,
                    imgProd: img
                };

                $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("AgregarAlCarrito", "Carrito")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(prod),
                    success: function (response) {
                        alertify.confirm('ANIMANIA', '¿Desea ir al carrito?', function () { location.href = '@Url.Action("Index","Carrito")' }
                            , function () { location.href = '@Url.Action("listaNovedad","Producto")' });
                },
                error: function (response) {
                    alert("error");
                }
             });
                }
            }

            function items() {
            var item = '@Session["items"]'
            $('#items').html(item);
        }

        </script>

