    <script>

        window.onload = function () {
            listarAnime();
            Session();
            items();
            
        };

        function Session() {
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
        var asignaciones = '@Session["asignaciones"]';
            $('#btnIncio').html(json["nomCliEmp"]);
            if (asignaciones != '') {
                $('#admin').css('display', 'block');
                $('#link-mc').css('display', 'none');
                $('#link-in').css('display', 'none');
                $('#link-re').css('display', 'none');
                $('#link-cs').css('display', 'block');
                $('#nos_').css('display', 'none');
                return;
            }
            if (json["nomCliEmp"] != '') {
                $('#link-mc').css('display', 'block');
                $('#link-cs').css('display', 'block');
                $('#link-in').css('display', 'none');
                $('#link-re').css('display', 'none');
            }
        }


        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    // $('#img-anime').css('background-image', 'url(/img/GohanFigura.jpg)');
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function items() {
            var item = '@Session["items"]'
            $('#items').html(item);
        }

    </script>

