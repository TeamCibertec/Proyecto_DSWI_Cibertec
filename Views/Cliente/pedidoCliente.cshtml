        function Session() {
            var username = '@Session["login"]';
            var asignaciones = '@Session["asignaciones"]';
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
            $('#btnIncio').html(json["nomCliEmp"]);

            if (asignaciones != '') {
            $('#admin').css('display', 'block');
            }
            if (json["nomCliEmp"] != '') {
                $('#link-mc').css('display', 'block');
                $('#link-cs').css('display', 'block');
                $('#link-in').css('display', 'none');
                $('#link-re').css('display', 'none');
            }
        }


        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function items() {
            var item = '@Session["items"]'
            $('#items').html(item);
        }

        function ObtenerDetalle(codigo) {
            $('#añadir_tabla').html("");
            $('#pie_tabla').html("");
            var id = codigo;
            var total = 0;
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaDetalle", "OrdenCompraAdmin")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: id},
                success: function (response) {
                    for (x of response) {
                        $('#añadir_tabla').append("<tr><td>" + x.codDetalle + "</td><td>" + x.desProd + "</td><td>" + x.cantidad + "</td><td>" + x.preUnit + "</td><td>" + x.importe + "</td></tr>");
                        total = total + x.importe;
                    }
                    var formatter = new Intl.NumberFormat('es-PE', {
                        style: 'currency',
                        currency: 'PEN',
                    });
                    $('#pie_tabla').append("<tr><td>Total: </td><td>" + formatter.format(total) + "</td></tr>");
                },
                error: function (response) {
                    alert("error");
                }
             });
        }

    </script>

