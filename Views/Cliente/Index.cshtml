        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen(" + x.idAnime +")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }
                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    // $('#img-anime').css('background-image', 'url(/img/GohanFigura.jpg)');
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function registrarCliente() {

            var obj =
            {
                docCli: $('#docCli').val(),
                nomCli: $('#nomCli').val(),
                fecNacCli: $('#fecNac').val(),
                corCli: $('#corCli').val(),
                telfCli: $('#tlfCli').val(),
                tipoDoc: $('#tipoDoc').val()
            };

            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("registroCliente", "Cliente")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(obj),

                success: function (response) {
                    insertarUsuCli(response);
                    insertarCliDirec(response);
                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function insertarUsuCli(cod) {
            var obj =
            {
                idCliEmp: cod,
                corUsu: $('#corCli').val(),
                passUsu: $('#pass').val()
            };

            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("registroUsuCliente", "Cliente")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(obj),

                success: function (response) {
                },
                error: function (response) {
                    alert("error");
                }
             });
        }


        function insertarCliDirec(cod) {
            var obj =
            {
                idCli: cod,
                desDirec: $('#dirCli').val(),
                idDis: $('#codDis').val()
            };

            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("registroClienteDireccion", "Cliente")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(obj),

                success: function (response) {
                    alertify.success("Usuario registrado correctamente");
                    location.href = '@Url.Action("Index","Producto")';
                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Validar1() {
            var num = $('#pass').val().length;
            //alert(num);
            if (num >= 5) {
                $('#pass').removeClass('border-danger');
                $('#pass').addClass('border-success');
                Validar2();
            } else {
                $('#pass').removeClass('border-success');
                $('#pass').addClass('border-danger');
            }

        }

        function Validar2() {
            var num = $('#pass').val().length;
            var pass = $('#pass').val();
            var rptpass = $('#rptpass').val();
            if (num >= 5 && pass === rptpass) {
                $('#rptpass').removeClass('border-danger');
                $('#rptpass').addClass('border-success');
                document.getElementById('btnGenerar').disabled = false;
            } else {
                $('#rptpass').removeClass('border-success');
                $('#rptpass').addClass('border-danger');
                document.getElementById('btnGenerar').disabled = true;
            }

        }

    </script>

