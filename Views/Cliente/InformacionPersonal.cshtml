        };

        function Session() {
            var username = '@Session["login"]';
            var asignaciones = '@Session["asignaciones"]';
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
            $('#btnIncio').html(json["nomCliEmp"]);

            if (asignaciones != '') {
            $('#admin').css('display', 'block');
            }
            if (json["nomCliEmp"] != '') {
                $('#link-mc').css('display', 'block');
                $('#link-cs').css('display', 'block');
                $('#link-in').css('display', 'none');
                $('#link-re').css('display', 'none');
            }
        }


        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function items() {
            var item = '@Session["items"]'
            $('#items').html(item);
        }

        function Password() {
            if (document.getElementById('chkBox').checked) {
                document.getElementById("pass").readOnly = false;
                document.getElementById("rptpass").readOnly = false;
                document.getElementById('btnSave').disabled = true;
                Validar2();
            } else {
                document.getElementById("pass").readOnly = true;
                document.getElementById("rptpass").readOnly = true;
                document.getElementById('btnSave').disabled = false;
            }

        }

        function Validar1() {
            var num = $('#pass').val().length;
            if (num >= 5) {
                $('#pass').removeClass('border-danger');
                $('#pass').addClass('border-success');
                Validar2();
            } else {
                $('#pass').removeClass('border-success');
                $('#pass').addClass('border-danger');
            }

        }

        function Validar2() {
            var num = $('#pass').val().length;
            var pass = $('#pass').val();
            var rptpass = $('#rptpass').val();
            if (num >= 5 && pass === rptpass) {
                $('#rptpass').removeClass('border-danger');
                $('#rptpass').addClass('border-success');
                document.getElementById('btnSave').disabled = false;
            } else {
                $('#rptpass').removeClass('border-success');
                $('#rptpass').addClass('border-danger');
                document.getElementById('btnSave').disabled = true;
            }
        }

        document.getElementById("btnSave").addEventListener("click", function () {
            var idCli = '@Model.idCli';
            var docCli = $('#docCli').val();
            var nomCli = $('#nomCli').val();
            var fecNacCli = $('#fecNacCli').val();
            var corCli = $('#corCli').val();
            var telfCli = $('#celCli').val();
            var pswCli = $('#pass').val();

            var cli =
            {
                idCli: idCli,
                docCli: docCli,
                nomCli: nomCli,
                fecNacCli: fecNacCli,
                corCli: corCli,
                telfCli: telfCli,
                pswCli: pswCli
            };

            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("actualizarCliente", "Cliente")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(cli),
                success: function (response) {
                    if (response == 2) {
                        alertify.set('notifier', 'position', 'top-center');
                        alertify.success('Los datos fueron actualizados exitosamente');
                    } else {
                        alertify.set('notifier', 'position', 'top-center');
                        alertify.error('¡Ops! Al parecer hubo un error durante la actualización de sus datos.');
                    }
                },
                error: function (response) {
                    alert("error");
                }
            });

        });

    </script>

