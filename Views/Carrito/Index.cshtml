      function ActualizarCarrito() {
          var filas = $('#filas').find("tr");
          var codigo = 0;
          var cant = 0;
          var pre = 0;
            for (i = 0; i < filas.length; i++) {
                var celdas = $(filas[i]).find("td");
                codigo = $(celdas[0]).html();
                cant = $(celdas[3]).closest("tr").find(".cant").val();
                pre = $(celdas[2]).closest("tr").find("#preProd").html();
                var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));

                var prod =
                {
                   idUsuario: json["idUsu"],
                   idProducto: codigo,
                   preProd: pre,
                   cantProd: cant
                };


             $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("actualizarItemCarrito", "Carrito")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(prod),

                 success: function (response) {

                },
                error: function (response) {
                    alert("error");
                }
             });
                
          }
          alertify.success('Carrito Actualizado');
          location.href = '@Url.Action("Index","Carrito")';
        }



        var x = null;

        function Time() {
            var cont = 10;

            x = setInterval(function () {

                cont = --cont <= -1 ? 10 : cont;
                $('#timer').html(cont);
                if (cont == 0) {
                    clearInterval(x);
                    ActualizarCarrito();
                }
            }, 1000);
        }

        function regresarAproductos() {
            location.href = '@Url.Action("Index","Producto")';
        }

        function Session() {
            var asignaciones = '@Session["asignaciones"]';
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
            $('#btnIncio').html(json["nomCliEmp"]);
            
            if (asignaciones != '') {
            $('#admin').css('display', 'block');
            }
        }

        function listarAnime() {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnime", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (response) {
                    for (x of response) {
                        $('#links-anime').append("<li><a onmouseover='Imagen("+x.idAnime+")' href='@Url.Action("listaxAnime", "Producto")?codigo="+x.idAnime+"'>" + x.nomAnime + "</a></li>");
                    }

                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function Imagen(codigo) {
            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("listaProdAnimeImg", "Producto")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: codigo },
                success: function (response) {
                    $('#img-anime').css('background-image', 'url('+response+')');
                },
                error: function (response) {
                    alert("error");
                }
             });

        }

        function items() {
            var item = '@Session["items"]'
            $('#items').html(item);
        }


        function Cantidad(a, cant) {
            var input = $(a).closest("tr").find(".cant");
            input.val(+input.val() + cant);
            clearInterval(x);
            Time();
        }

        function EliminarItem(cod) {
            var json = @Html.Raw(Json.Encode(@HttpContext.Current.Session["login"]));
            var prod = cod;
             $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("eliminarCarritoItem", "Carrito")',
                contentType: "application/json; charset=utf-8",
                 data: { usu: json["idUsu"], prod: prod },
                 success: function (response) {
                     if (response == 0) {
                         setTimeout(regresarAproductos, 2000);
                         var msg = alertify.message('Default message');
                         msg.delay(5).setContent('¡Uy! Parece que tu carrito se quedo vacío... Regresando a la página principal');    
                     } else {
                         location.href = '@Url.Action("Index","Carrito")';
                     }

                },
                 error: function (response) {
                     alert("error" + response);
                }
             });
        }

    </script>

