                idAsignacion: cod
            };
            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '@Url.Action("insertarAsignacionEmpleado", "UsuarioAdmin")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(emp),
                success: function (response) {
                    alertify.confirm("Rol asignado correctamente", function () {
                        RolesDisponibles(usu);
