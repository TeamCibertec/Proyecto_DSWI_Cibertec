           function BuscarAsigEmp() {
            $('.rol').detach();
             var cod = $('#codUsu').val();
             if (cod === '') {
                 cod = 0;
             }
             var nombre = $('#nomEmple').val();
             if (nombre === '') {
                 nombre = "";
             }

             $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("buscarAsignacionEmpleado", "UsuarioAdmin")',
                contentType: "application/json; charset=utf-8",
                data: { codigo: cod, nom: nombre },
                success: function (response) {
                    for (x of response) {
                        $('#añadir_tabla2').append("<tr class='rol'><td><input type='text' onclick='RolesDisponibles(" + x.idUsuario +")' style='border:none;color:blue;cursor:pointer' readonly value='" + x.idUsuario + "'/></td><td>" + x.nomAsignacion + "</td><td>" + x.desEstAsigEmp + "</td><td>" + x.nomEmpleado + "</td></tr>");
                        $('#codUsuario').val(x.idUsuario);
                        $('#nomEmpleado').val(x.nomEmpleado);
                    }
                },
                error: function (response) {
                    alert("error");
                }
             });
        }

        function openLink(evt, animName) {
            var i, x, tablinks;
            x = document.getElementsByClassName("city");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < x.length; i++) {
