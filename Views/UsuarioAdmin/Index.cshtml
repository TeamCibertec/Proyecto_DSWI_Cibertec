            $.ajax({
                type: "GET",
                dataType: "JSON",
                url: '@Url.Action("buscarAsignacionesActuales", "UsuarioAdmin")',
                contentType: "application/json; charset=utf-8",
                data: {codigo : codigo},
                success: function (response) {
                    for (x of response) {
                        if (x.estado == 0) {
                            $('#añadir_tabla4').append("<tr><td>" + x.idAsignacion + "</td><td>" + x.nomAsignacion + "</td><td>ACTIVO</td><td><input onclick='EliminarRol(" + x.idAsignacion + ")' type='image' src='/img/borrar.png' /></td></tr>");
